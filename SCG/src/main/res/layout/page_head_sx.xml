<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/head_re"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color_new"
                android:padding="5dp">

    <!--  -->

    <ImageView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_b_to_left"
        android:visibility="gone"/>

    <!--     <ImageView
            android:id="@+id/title_right1"
            style="@style/title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_b_to_left_sx"
            android:visibility="gone" />
         -->

    <TextView
        android:id="@+id/title_right1"
        style="@style/title_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/button_b_to_left_sx"
        android:gravity="center"
        android:text="个人中心"
        android:textColor="@color/white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title"
        style="@style/white20Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="读取中..."/>

    <ImageView
        android:id="@+id/title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_b_to_right_sx"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title_left_tv"
        android:text="注册"
        style="@style/black20Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/title_left1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shmm"
        android:visibility="gone"/>

</RelativeLayout>