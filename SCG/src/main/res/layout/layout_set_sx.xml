<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bk"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shezhilinearlayout_bk"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/item_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_p_kuang4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/yjfk"
                    android:text="  意见反馈"
                    android:textColor="@color/title_black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_07" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/back" />

            <RelativeLayout
                android:id="@+id/item_check_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_p_kuang4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/jcgx"
                    android:text="  检测更新"
                    android:textColor="@color/title_black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_07" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/back" />

            <RelativeLayout
                android:id="@+id/item_shareapp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_p_kuang4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/appshare"
                    android:text="  软件分享"
                    android:textColor="@color/title_black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_07" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shezhilinearlayout_bk"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/item_contactus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_p_kuang4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/tome"
                    android:text="  联系我们"
                    android:textColor="@color/title_black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_07" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/back" />

            <RelativeLayout
                android:id="@+id/item_aboutus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_p_kuang4"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:tag="6" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/aboutus"
                    android:text="  关于苏常"
                    android:textColor="@color/title_black"
                    android:textSize="17sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/app_07" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>