<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" >

    <include layout="@layout/page_head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

         <TextView
                style="@style/black18Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="请认真填写以下信息" />   

              

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="您的姓名" />

                    <EditText
                        android:id="@+id/user_name"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您的姓名"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="手机号码" />

                    <EditText
                        android:id="@+id/user_phone"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您手机号码"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="您的年龄" />

                    <EditText
                        android:id="@+id/age"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您的年龄"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/jk_layout"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black17Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="借款金额" />

                <EditText
                    android:id="@+id/money"
                    style="@style/gray17Text"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="5"
                    android:background="@drawable/jk_layout_edt"
                    android:hint="@string/tz_jiekuanmooney"
                    android:inputType="number"
                    android:singleLine="true" >
                </EditText>

                <TextView
                    android:id="@+id/yuan"
                    style="@style/red17Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:text="元" />
            </LinearLayout>
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="贷款用途" />

                    <EditText
                        android:id="@+id/Yongtu"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入贷款用途"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="所在省份" />

                    <EditText
                        android:id="@+id/province"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您所在省份"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="所在城市" />

                    <EditText
                        android:id="@+id/city"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您所在城市"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/jk_layout"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <TextView
                        style="@style/black17Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="所在县区" />

                    <EditText
                        android:id="@+id/area"
                        style="@style/gray17Text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/jk_layout_edt"
                        android:hint="请输入您所在县区"
                        android:singleLine="true" >
                    </EditText>
                </LinearLayout>
              
            
           

            <Button
                android:id="@+id/submit_lendmoney"
                style="@style/white20Text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_b_back1"
                android:gravity="center"
                android:padding="10dp"
                android:text="发    布" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>