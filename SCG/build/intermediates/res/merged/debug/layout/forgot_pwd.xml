<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" >

    <include layout="@layout/page_head_sx" />

    <!--
         <TextView
        style="@style/black16Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:text="请输入手机号找回密码" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_edit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/edittext"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="手机号码:" />

        <EditText
            android:id="@+id/user_phone_sx"
            style="@style/edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入绑定手机号码"
            android:inputType="phone"
            android:maxLength="20"
            android:maxLines="1"
            android:width="190dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/login_edit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/ver_pwd_sx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入验证码"
            android:maxLength="20"
            android:maxLines="1" />

        <TextView
            android:id="@+id/edittext_sx"
            style="@style/edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_yj"
            android:gravity="center"
            android:text="发送" />
    </LinearLayout>

    <Button
        android:id="@+id/forget_pwd_sx"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_yj"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>