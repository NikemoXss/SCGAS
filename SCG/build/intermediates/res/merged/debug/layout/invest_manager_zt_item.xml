<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:descendantFocusability="blocksDescendants"


    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >

              <TextView
                  android:id="@+id/invest_manager_item_tbmc"
                  style="@style/black16Text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:maxLines="1"
                  android:maxWidth="190dp"
                  android:ellipsize="end"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:text="@string/load" />

              <TextView
                  android:id="@+id/invest_manager_item_tz_time"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  style="@style/black16Text"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:text="@string/load"/>

            </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/debet_item_tips1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="金额"
                    style="@style/gray10Text"

                    />


                <TextView
                    android:id="@+id/invest_manager_item_ztje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/invest_lhb_tzbj"
                    style="@style/black10Text"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/debet_item_tips2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="利率"
                    style="@style/gray10Text"

                    />


                <TextView
                    android:id="@+id/invest_manager_item_nhll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/invest_lhb_tzbj"
                    style="@style/black10Text"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                     style="@style/gray10Text"
                    android:id="@+id/debet_item_tips3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="待收本息"

                    />


                <TextView
                    android:id="@+id/invest_manager_item_tzsj"
                    style="@style/black10Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/invest_lhb_tzbj"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/debet_item_tips4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="回收时间"
                     style="@style/gray10Text"

                    />


                <TextView
                    android:id="@+id/invest_manager_item_dqsj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/invest_lhb_tzbj"
                    style="@style/black10Text"
                    android:textSize="11sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    


    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/back"/>

</LinearLayout>
