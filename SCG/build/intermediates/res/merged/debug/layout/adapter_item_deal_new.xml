<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" >
     
       <!--  <TextView
           android:id="@+id/time_center"
            style="@style/black20Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="2014.11.24"
             />-->
       
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/top_kaung"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/type"
            style="@style/black18Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/load"/>

        <TextView
            android:id="@+id/time"
            style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:text="@string/load" />
    </RelativeLayout>
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/middle_kuang"
        android:gravity="center_vertical" >

        <TextView
            style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="提现金额"/>

        <TextView
            android:id="@+id/money"
             style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/load" />
    </RelativeLayout>
    
       <RelativeLayout
           android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/middle_kuang"
        android:gravity="center_vertical" >

        <TextView
            style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="可用余额"/>

        <TextView
            android:id="@+id/blance_money"
             style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/load" />
    </RelativeLayout>
    
       <RelativeLayout
           android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/middle_kuang"
        android:gravity="center_vertical" >

        <TextView
           style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="冻结金额"/>

        <TextView
            android:id="@+id/nouse_money"
             style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/load" />
    </RelativeLayout>
    
       <RelativeLayout
           android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:background="@drawable/middle_kuang"
        android:gravity="center_vertical" >

        <TextView
           style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="待收金额"/>

        <TextView
            android:id="@+id/back_money"
             style="@style/black13Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
           android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="@string/load" />
    </RelativeLayout>
    
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:padding="5dp"
           android:layout_marginBottom="5dp"
           android:background="@drawable/buttom_kuang"
           android:layout_marginRight="5dp"
           android:orientation="vertical" >
        
            <TextView
            style="@style/black16Text"
            android:textColor="@color/new_black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"            
            android:text="说明" />

            <TextView
                android:id="@+id/info"
                android:textColor="@color/new_black_color"
                style="@style/black13Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="@string/load" />
           
       </LinearLayout>
    
       
    

</LinearLayout>
