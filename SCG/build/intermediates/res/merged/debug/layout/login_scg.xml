<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/page_head_sx"/>

    <LinearLayout
        android:id="@+id/et_dh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_ed_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_zh_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonstyle">

                <!--
                     <EditText
                    android:id="@+id/login_zh_sx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btn_yj_et"
                    android:drawableLeft="@drawable/icon_03"
                    android:drawablePadding="10dp"
                    android:hint="请输入账号..."
                    android:singleLine="true" >
                    <requestFocus />
                </EditText>
                -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_03"/>

                <com.lmq.view.EditTextWithDel
                    android:id="@+id/login_zh_sx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btn_yj_et"
                    android:drawablePadding="10dp"
                    android:hint="请输入账号"
                    android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/login_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttonstyle">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_05"/>

                <EditText
                    android:id="@+id/login_mm_sx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/btn_yj_et"
                    android:drawablePadding="10dp"
                    android:hint="请输入密码"
                    android:password="true"
                    android:singleLine="true"/>

                <ImageView
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/isopen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/close"/>

                <!--                 <EditText
                                    android:id="@+id/login_mm_sx"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:background="@drawable/btn_yj_et"
                                    android:drawableLeft="@drawable/icon_05"
                                    android:drawablePadding="10dp"
                                    android:hint="请输入密码..."
                                    android:password="true"
                                    android:singleLine="true" /> -->
            </LinearLayout>
        </LinearLayout>


        <Button
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:id="@+id/login_sx_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ljjrbktcs"
            android:text="登录"
            android:padding="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/remember_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <CheckBox
                android:id="@+id/cb_login_sx"
                style="@style/main20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="记住密码"/>

                <TextView
                    android:id="@+id/forget_pwd_sx"
                    style="@style/main20Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_info3"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>