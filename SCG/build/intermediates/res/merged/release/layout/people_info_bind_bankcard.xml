<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical" >

    <include layout="@layout/page_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                style="@style/black20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/bind_mycard" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/chose_bank"
                    android:textColor="@color/new_black_color" />
         
                <Spinner
                    android:id="@+id/sp_chosebank_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp" />
            </LinearLayout>

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:id="@+id/lay1"
                android:background="@drawable/button_p_kuang4"
                android:padding="10dp" >
<TextView
                    android:id="@+id/ce1"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color"
                    android:visibility="invisible" />
                
                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/now_kahao"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:layout_toRightOf="@id/ce1"
                    android:id="@+id/ed_oldcardnumber"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:hint="@string/bank_number"
                    android:inputType="number"  >
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/ce2"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textcard"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="卡号"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/ed_cardnumber_sx"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_toRightOf="@id/ce2"
                    android:hint="@string/bank_number"
                    android:inputType="number" >
                </EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/ce3"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color"
                    android:visibility="invisible" />

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="身份证"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/ed_sfz_sx"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_toRightOf="@id/ce3"
                    android:hint="请输入身份证">
                </EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/ce5"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color"
                    android:visibility="invisible" />

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="电话号码"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/ed_dh_sx"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_toRightOf="@id/ce5"
                    android:hint="请输入电话号码"
                    android:inputType="number" >
                </EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/ce6"
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color"
                    android:visibility="invisible" />

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="真实姓名"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:layout_centerVertical="true"
                    android:id="@+id/ed_rn_sx"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_toRightOf="@id/ce6"
                    android:hint="请输入真实姓名">
                </EditText>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/privince"
                    android:textColor="@color/new_black_color" />
          

                <Spinner
                    android:id="@+id/province_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/city"
                    android:textColor="@color/new_black_color" />

                <Spinner
                    android:id="@+id/city_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="1dip"
                android:background="@drawable/button_p_kuang4"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    style="@style/black18Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/kaihuzhihang"
                    android:textColor="@color/new_black_color" />

                <EditText
                    android:id="@+id/ed_oldbank"
                    style="@style/gray13Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="#00000000"
                    android:hint="@string/open_bankzhihang"
                    android:paddingLeft="20dp" >
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/btn_tijiao"
                style="@style/white18Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_b_back1"
                android:padding="10dp"
                android:text="@string/bind_yhk" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>