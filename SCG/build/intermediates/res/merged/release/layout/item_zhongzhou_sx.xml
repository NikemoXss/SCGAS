<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/btn_yj_et"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/zc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="标题"
                android:textSize="20sp" />

<!--             <TextView
                android:visibility="gone"
                android:id="@+id/zc_fbsj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="发布时间"
                android:textColor="@color/gray" /> -->
                            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹人数:" />

                <TextView
                    android:id="@+id/Zc_czrs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹人数"
                    android:textColor="@color/red" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/Zc_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹金额:" />

                <TextView
                    android:id="@+id/Zc_zcje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹金额:"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已筹金额:" />

                <TextView
                    android:id="@+id/Zc_ycje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已筹金额:"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹人数:" />

                <TextView
                    android:id="@+id/Zc_czrs1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹人数"
                    android:textColor="@color/red" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/Zc_progress"
            style="@style/progressBarHorizontal_color"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:max="100"
            android:progress="0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Zc_jindu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="进度：。。。"
                android:textColor="@color/red" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_sx" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间:" />

            <TextView
                android:id="@+id/Zc_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取中"
                android:textColor="@color/red" />
        </LinearLayout>

        <TextView
            android:id="@+id/zc_item_ljrg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_yj"
            android:clickable="true"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="立即认购"
            android:textColor="@color/white" />
    </RelativeLayout>



</LinearLayout>