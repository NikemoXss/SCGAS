<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/page_head_sx" >
    </include>

    <FrameLayout
        android:id="@+id/content_frame_sx"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/rg_tab_sx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/b_paixu_back"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/tab_one_sx"
            style="@style/tab_bar"
            android:drawableTop="@drawable/tab_home_attention_selector"
            android:text="主页" />

        <RadioButton
            android:id="@+id/tab_twotwo_sx"
            style="@style/tab_bar"
            android:drawableTop="@drawable/tab_zhongchou_attention_selector"
            android:text="众筹"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/tab_five_sx"
            style="@style/tab_bar"
            android:drawableTop="@drawable/tab_tz_attention_selector"
            android:text="投资"
            android:visibility="visible" />

        <RadioButton
            android:id="@+id/tab_two_sx"
            style="@style/tab_bar"
            android:drawableTop="@drawable/tab_touzi_attention_selector"
            android:text="账户" />

        <RadioButton
            android:id="@+id/tab_thr_sx"
            style="@style/tab_bar"
            android:drawableTop="@drawable/tab_setting_attention_selector"
            android:text="设置" />
    </RadioGroup>

</LinearLayout>