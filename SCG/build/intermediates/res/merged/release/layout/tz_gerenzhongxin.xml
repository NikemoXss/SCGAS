<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

        <include layout="@layout/page_head" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/credit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/zu3" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/second_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/zu4" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/mortgage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/zu5" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/circulation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/zu2" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />

        <ImageView
            android:id="@+id/guarantee_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/zu1" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/line" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/title_intro_1"
                android:textColor="@color/gold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/title_det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:lineSpacingExtra="3dp"
                android:text="@string/title_det_1"
                android:textScaleX="1.0"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

